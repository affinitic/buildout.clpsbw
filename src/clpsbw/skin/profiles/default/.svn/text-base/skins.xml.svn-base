<?xml version="1.0"?>
<object name="portal_skins"
        allow_any="False"
        cookie_persistence="False"
        default_skin="Affinitic skin">

 <object name="affinitic_images"
         meta_type="Filesystem Directory View"
         directory="affinitic.skin:skins/affinitic_images"/>
 <object name="affinitic_templates"
         meta_type="Filesystem Directory View"
         directory="affinitic.skin:skins/affinitic_templates"/>
 <object name="affinitic_styles"
         meta_type="Filesystem Directory View"
         directory="affinitic.skin:skins/affinitic_styles"/>

 <skin-path name="Affinitic skin"
            based-on="Sunburst Theme">
  <layer name="affinitic_images"
         insert-after="custom"/>
  <layer name="affinitic_templates"
         insert-after="affinitic_images"/>
  <layer name="affinitic_styles"
         insert-after="affinitic_templates"/>
 </skin-path>

</object>
