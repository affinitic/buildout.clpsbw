<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>
<div metal:define-macro="portlet"
     tal:define="experiences context/@@manageClpsbw;
                 institutions context/@@manageClpsbw"
     tal:condition="python:user.has_role(['Manager'], here)">
    <dl id="portlet-gestion-db">
        <dt class="portletHeaderDB">
            <span class="portletTopLeft"></span>
            <span class="portletTopRight"></span>
            Gestion de la DB
        </dt>

        <dt class="portletItemDB"></dt>
        
        <div class="portletItemDB">
            <div class="rubriqueDB">
                <dt class="portletTitreDb">
                    <img src="puce_gestion_bd.png" />
                    Expériences
                </dt>
                <dd class="">
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/admin-experience-creer">Créer</a>
                </dd>
                <dd class="">
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/admin-experience-lister">Lister</a>
                </dd>
                <dd class="">
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/admin-experience-recherche">Modifier</a>
                </dd>
                <dd class="">
                    <a href=""
                       tal:attributes="href string:${context/portal_url}/admin-experience-recherche">Rechercher</a>
                </dd>
                <dd tal:define="nbrExp python:experiences.getCountExperienceByEtat('private')"
                    class="">
                    <br />
                    <a href="admin-experience-lister-par-etat?etat=private">
                        Etat privé : <span tal:content="nbrExp">nbr</span>
                    </a>
                </dd>
                <dd tal:define="nbrExp python:experiences.getCountExperienceByEtat('pending')"
                    class="">
                    <a href="admin-experience-lister-par-etat?etat=pending">
                        Etat en attente : <span tal:content="nbrExp">nbr</span>
                    </a>
                </dd>
                <dd tal:define="nbrExp python:experiences.getCountExperienceByEtat('publish')"
                    class="">
                    <a href="admin-experience-lister-par-etat?etat=publish">
                        Etat publi&eacute; : <span tal:content="nbrExp">nbr</span>
                    </a>
                </dd>
                <dd tal:define="nbrExp python:experiences.getCountAllExperience()"
                    class="">
                    <div class="totalDB">
                        Total : <span tal:content="nbrExp">nbr</span>
                    </div>
                    </dd>
            </div>

            <div class="rubriqueDB">
                <dt class="portletTitreDb">
                    <img src="puce_gestion_bd.png" />
