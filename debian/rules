#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

INSTANCECOUNT := 1
PACKAGE	  := clpsbw-website
CURDIR    := $(shell pwd)
BUILDDIR  := $(CURDIR)/tmp/$(PACKAGE)
DEBIANCORE    := $(CURDIR)/debian/$(PACKAGE)-website
INSTALLDIR   := /home/clps/$(PACKAGE)

distribution := $(shell lsb_release -is)

clean:
	#rm -rf $(BUILDDIR)/
	dh_testdir
	dh_testroot
	rm -rf build
	rm -f build-stamp
	dh_clean

build:
	mkdir -p $(BUILDDIR)
	cp -ap ./bootstrap.py $(BUILDDIR)
	cp -ap ./*.cfg $(BUILDDIR)
	cd $(BUILDDIR) && virtualenv .
	rm -f $(BUILDDIR)/buildout.cfg
	mkdir -p $(BUILDDIR)/eggs
	cd $(BUILDDIR) && ln -s base.cfg buildout.cfg
	cd $(BUILDDIR) && bin/python bootstrap.py buildout:eggs-directory=$(BUILDDIR)/eggs
	cd $(BUILDDIR) && bin/buildout -c buildout.cfg buildout:eggs-directory=$(BUILDDIR)/eggs
	echo $(DEBIANCORE)
	touch build-stamp

install-base:
	rm -rf $(DEBIANCORE)
	for i in `seq -w 01 0$(INSTANCECOUNT)` ; do \
           rm -rf $(DEBIANCORE)$$i ; \
	done
	dh_testdir
	dh_testroot
	dh_clean -k -s
	dh_installdirs -s
	rm  ${BUILDDIR}/.mr.developer.cfg
	rm  ${BUILDDIR}/.installed.cfg
	rm -f ${BUILDDIR}/versions-picked.cfg
	rm -fr ${BUILDDIR}/downloads

install-website:
	mkdir -p $(DEBIANCORE)/home/clps/$(PACKAGE)
	mkdir -p $(DEBIANCORE)/home/clps/$(PACKAGE)/parts
	find ${BUILDDIR}/bin -executable -type f -exec sed -i s%${BUILDDIR}%${INSTALLDIR}%g {} \;
	sed -i s%${BUILDDIR}%${INSTALLDIR}%g ${BUILDDIR}/bin/instance01
	sed -i s%${BUILDDIR}%${INSTALLDIR}%g ${BUILDDIR}/parts/instance01/bin/interpreter
	sed -i s%${BUILDDIR}%${INSTALLDIR}%g ${BUILDDIR}/parts/instance01/etc/zope.conf
	cp -ap $(BUILDDIR)/bin $(DEBIANCORE)/${INSTALLDIR}
	cp -ap $(BUILDDIR)/devel $(DEBIANCORE)/${INSTALLDIR}
	cp -ap $(BUILDDIR)/eggs $(DEBIANCORE)/${INSTALLDIR}
	cp -ap $(BUILDDIR)/parts/omelette $(DEBIANCORE)/${INSTALLDIR}/parts
	cp -ap $(BUILDDIR)/parts/zpsycopg $(DEBIANCORE)/${INSTALLDIR}/parts
	rm -r $(DEBIANCORE)/${INSTALLDIR}/bin/zeo
	rm -r $(DEBIANCORE)/${INSTALLDIR}/bin/zeopack
	rm -r $(DEBIANCORE)/${INSTALLDIR}/bin/repozo
	rm $(DEBIANCORE)/${INSTALLDIR}/bin/instance01
	rm $(DEBIANCORE)/${INSTALLDIR}/bin/instance02
	for i in $(find $(DEBIANCORE)/${INSTALLDIR}/parts/omelette -type l); do old_link=$(readlink -m $i); new_link=$(echo $old_link | sed  s%${BUILDDIR}/${INSTALLDIR}/); rm $i; ln -f -s $new_link $i; done
	find $(DEBIANCORE)/${INSTALLDIR} -name "*.pyc" -delete;
	find $(DEBIANCORE)/${INSTALLDIR} -name "*.pyo" -delete;
	mkdir -p $(DEBIANCORE)/home/clps/$(PACKAGE)
	mkdir -p $(DEBIANCORE)/${INSTALLDIR}/bin
	mkdir -p $(DEBIANCORE)/${INSTALLDIR}/parts
	mkdir -p $(DEBIANCORE)/${INSTALLDIR}/var/log
	mkdir -p $(DEBIANCORE)/${INSTALLDIR}/var/filestorage
	mkdir -p $(DEBIANCORE)/${INSTALLDIR}/var/blobstorage
	sed -i s%${BUILDDIR}%${INSTALLDIR}%g ${BUILDDIR}/bin/repozo
	cp -ap $(BUILDDIR)/bin/repozo $(DEBIANCORE)/${INSTALLDIR}/bin
	for i in `seq -w 01 0$(INSTANCECOUNT)` ; do \
	    mkdir -p $(DEBIANCORE)$$i/${INSTALLDIR} ; \
	    mkdir -p $(DEBIANCORE)$$i/${INSTALLDIR}/bin ; \
	    mkdir -p $(DEBIANCORE)$$i/${INSTALLDIR}/parts ; \
	    mkdir -p $(DEBIANCORE)$$i/${INSTALLDIR}/var/instance$$i ; \
	    cp -ap $(BUILDDIR)/bin/instance01 $(DEBIANCORE)$$i/${INSTALLDIR}/bin/instance$$i ; \
	    cp -ap $(BUILDDIR)/parts/instance01 $(DEBIANCORE)$$i/${INSTALLDIR}/parts/instance$$i ; \
	    sed -i s/instance01/instance$$i/g $(DEBIANCORE)$$i/${INSTALLDIR}/bin/instance$$i ; \
	    sed -i s/instance01/instance$$i/g $(DEBIANCORE)$$i/${INSTALLDIR}/parts/instance$$i/etc/zope.conf ; \
            sed -i "s/address 5080/address $((5010 + 10#$$i))/" $(DEBIANCORE)$$i/${INSTALLDIR}/parts/instance$$i/etc/zope.conf ; \
	done

install: install-base install-website
	#rm -rf $(BUILDDIR)/

binary-common:
	dh_testdir
	dh_testroot

	dh_installchangelogs

	dh_installdocs
	dh_installdebconf
	dh_installinit
	dh_installman
	dh_link
	dh_strip
	dh_fixperms
	dh_shlibdeps
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep: build install
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

binary-arch: install
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

binary: binary-arch

.PHONY: build clean binary install
